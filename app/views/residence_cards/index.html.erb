<p id="notice"><%= notice %></p>

<h1>Residence Cards</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @residence_cards.each do |residence_card| %>
      <tr>
        <td><%= link_to 'Show', residence_card %></td>
        <td><%= link_to 'Edit', edit_residence_card_path(residence_card) %></td>
        <td><%= link_to 'Destroy', residence_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

