<h1>Employment Periods</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employment_periods.each do |employment_period| %>
      <tr>
        <td><%= link_to 'Show', employment_period %></td>
        <td><%= link_to 'Edit', edit_employment_period_path(employment_period) %></td>
        <td><%= link_to 'Destroy', employment_period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

