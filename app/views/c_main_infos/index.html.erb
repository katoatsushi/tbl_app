<h1>個別契約基本情報一覧</h1>


<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>契約基本情報ID</th>
      <th>契約内容</th>
      <th>労働者派遣の期間制限に抵触する日</th>
      <th>就業日・時間</th>
      <th>その他就業条件</th>
      <th>福利厚生</th>
      <th>派遣元情報</th>
    </tr>
  </thead>

  <tbody style="text-align: center;">
    <% @c_main_infos.each do |main| %>
      <tr>
        <td><%= link_to "#{main.id}", main %></td>
        <% if main.c_detail.nil? %>
          <td><%= link_to "作成", new_c_main_info_c_detail_path(main.id), class: "btn btn-outline-secondary btn-block" %></td>        
        <% else %>
          <td>
            <%= link_to "見る", c_main_info_c_detail_path(main.id, main.c_detail.id), class: "btn btn-outline-info btn-block" %>            
          </td>  
        <% end %>

        <%# if main.c_limit.nil? %>
          <td><%= link_to "作成", new_c_main_info_c_detail_path(main.id), class: "btn btn-outline-secondary btn-block" %></td>        
        <%# else %>
          <!-- <td></td>   -->
        <%# end %>

        <% if main.c_time.nil? %>
          <td><%= link_to "作成", new_c_main_info_c_time_path(main.id), class: "btn btn-outline-secondary btn-block " %></td>        
        <% else %>
          <td>
            <%= link_to "見る", c_main_info_c_time_path(main.id, main.c_time.id), class: "btn btn-outline-info btn-block" %> 
          </td>  
        <% end %>

        <% if main.c_other.nil? %>
          <td><%= link_to "作成", new_c_main_info_c_other_path(main.id), class: "btn btn-outline-secondary btn-block" %></td>        
        <% else %>
          <td>
            <%= link_to "見る", c_main_info_c_other_path(main.id, main.c_other.id), class: "btn btn-outline-info btn-block" %> 
          </td>  
        <% end %>

        <% if main.c_welfare.nil? %>
          <td><%= link_to "作成", new_c_main_info_c_welfare_path(main.id), class: "btn btn-outline-secondary btn-block" %></td>        
        <% else %>
          <td>
            <%= link_to "見る", c_main_info_c_welfare_path(main.id, main.c_welfare.id), class: "btn btn-outline-info btn-block" %> 
          </td>  
        <% end %>


        <% if main.c_origin.nil? %>
          <td><%= link_to "作成", new_c_main_info_c_origin_path(main.id), class: "btn btn-outline-secondary btn-block" %></td>        
        <% else %>
          <td>
            <%= link_to "見る", c_main_info_c_origin_path(main.id, main.c_origin.id), class: "btn btn-outline-info btn-block" %>             
          </td>  
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

