<h1 style="text-align: center;">学生確認事項</h1>
<%= form_for @student_check, url: employee_info_student_checks_path(params[:employee_info_id]) do |f| %>

	全日制:
	<%= f.radio_button :all, :yes %>
  	<%= f.label :all, "いいえ", {value: :false, style: "display: inline-block;"} %>
  	<%= f.radio_button :all, :no %>
  	<%= f.label :all, "はい", {value: :true, style: "display: inline-block;"} %> <br>

	夜間制:
	<%= f.radio_button :night, :yes %>
  	<%= f.label :night, "いいえ", {value: :false, style: "display: inline-block;"} %>
  	<%= f.radio_button :night, :no %>
  	<%= f.label :night, "はい", {value: :true, style: "display: inline-block;"} %> <br>	


	通信制:
	<%= f.radio_button :remote, :yes %>
  	<%= f.label :remote, "いいえ", {value: :false, style: "display: inline-block;"} %>
  	<%= f.radio_button :remote, :no %>
  	<%= f.label :remote, "はい", {value: :true, style: "display: inline-block;"} %> <br>	

	<%=f.submit '作成', class: 'btn btn-primary btn-lg btn-block' %>
<%end%>

